    COLL-VERSION=xx;LOCALE=en_US
    RDB$CHARACTER_SET_NAME          UTF8

    RDB$BYTES_PER_CHARACTER         4

    Records affected: 1
  """,
 'expected_stderr':
  """
  """,
  'substitutions': [
    ('SPECIFIC_ATTR_BLOB_ID.*', ''),
    ('COLL-VERSION=\d+\.\d+\.\d+\.\d+','COLL-VERSION=xx'),
    ('COLL-VERSION=\d+\.\d+','COLL-VERSION=xx')
  ]

}
]
