    set term ;^ 
    commit; 

    delete from test where id = 2; -- no errors 
    delete from test where id = 1; -- trigger throws exception 

    set list on;
    select rdb$get_context('USER_SESSION', 'AD_TRIGGER_NEW_V') as "new_v value in AD trigger:"
    from rdb$database;
