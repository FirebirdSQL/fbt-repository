        for
            execute statement (stt) 
                on external 'inet4://%(this_fdb)s' 
                as user '%(who)s' password '%(pwd)s'
            into protocol_when_connect_by_es_eds
        do
            suspend;
    end
    ^
    set term ;^

    quit;
'''
runProgram('isql',[ 'inet4://'+this_fdb, '-q'], sql_chk % locals() )
